@model HealthcareSystem.Models.Department

@{
    ViewData["Title"] = "Details";
}

@section Styles {

    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}

<section id="department" class="py-5">
    <div class="container text-center">



            <div class="content">

                <div class="container">
                    <h2 class="mb-5">Table #9</h2>

                    <div class="table-responsive">

                        <table class="table custom-table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Rooms</th>
                                    <th scope="col">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.departmentname)</td>
                                    <td>
                                        @Html.DisplayFor(model => model.departmentrooms)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.departmentdescription)</td>
                                </tr>

                            </tbody>
                        </table>
                        <a asp-action="Edit" asp-route-id="@Model.departamentid" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Department" asp-route-id="@Model.departamentid" class="btn btn-outline-primary">Back to departments</a>
                    </div>


                </div>

            </div>
</div>

</section>

<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>