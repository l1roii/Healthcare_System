@model IEnumerable<HealthcareSystem.Areas.Identity.Data.Users>

@{
    ViewData["Title"] = "User Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <section id="nurse" class=" container mt-5">
        @foreach (var item in Model)
        {

            <div class="row mt-5">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="image-flip">
                        <div class="mainflip flip-0">
                            <div class="frontside">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <p><img class=" img-fluid" src="~/img/doctor.png"></p>
                                        <h5 class="card-title">Name: @Html.DisplayFor(modelItem => item.FirstName) </h5>
                                        <h5 class="card-title">Lastname: @Html.DisplayFor(modelItem => item.LastName)</h5>
                                        <h5 class="card-title">Email: @Html.DisplayFor(modelItem => item.Email) </h5>
                                        @if (item.role == 1) { 
                                           <h5 class="card-title">Doctor</h5>
                                        }
                                        else { 
                                          <h5 class="card-title">Patient</h5>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</body>
</html>